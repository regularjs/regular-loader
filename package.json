{
  "name": "regular-loader",
  "version": "0.1.5",
  "keywords": [
    "regularjs",
    "regular",
    "rgl",
    "webpack",
    "loader"
  ],
  "description": "webpack loader for regularjs",
  "main": "lib/index.js",
  "scripts": {
    "test": "eslint lib --quiet && npm run ava",
    "ava": "rm -rf __tests__/dist && ava __tests__/**/*.test.js --serial",
    "snapshot": "rm -rf __tests__/__snapshots__ && npm run ava -- -u",
    "lint": "eslint lib --fix --quiet",
    "format": "prettier-eslint --list-different --write \"lib/**/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "mo",
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        2
      ]
    }
  },
  "maintainers": [
    {
      "name": "fengzilong",
      "email": "fengzilong1992@gmail.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "es6-promise": "^3.2.1",
    "es6-templates": "^0.2.2",
    "fastparse": "^1.1.1",
    "hash-sum": "^1.0.2",
    "html-minifier": "^3.5.6",
    "loader-utils": "^1.1.0",
    "lru-cache": "^4.0.1",
    "object-assign": "^4.1.0",
    "parse5": "^2.1.5",
    "postcss": "^5.0.21",
    "postcss-selector-parser": "^2.1.0",
    "source-map": "^0.5.6"
  },
  "peerDependencies": {
    "css-loader": "*",
    "style-loader": "*",
    "regularjs": "*"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.11",
    "eslint": "^3.15.0",
    "eslint-config-mo": "^0.2.0",
    "extract-text-webpack-plugin": "2.1.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fs-extra": "^4.0.1",
    "less": "^3.0.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.0.4",
    "prettier-eslint-cli": "^4.7.1",
    "regularjs": "0.6.0-beta.6",
    "rimraf": "^2.6.1",
    "style-loader": "^0.20.3",
    "webpack": "^2.7.0"
  }
}
